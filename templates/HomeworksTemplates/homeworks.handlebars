{{#if homeworks}}
    {{#each homeworks}}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <strong>
                    {{subject.title}}
                </strong>
            </div>
            <div class="panel-body">
                <div id="deadline">
                    <i>Deadline </i><strong><span>{{deadline}}</span></strong>
                </div>
                <div id="details">
                    {{#if details}}
                        <i>Details: </i><strong><span>{{details}}</span></strong>
                    {{else}}
                        <i>No details provided.</i>
                    {{/if}}
                </div>
                Posted by <span><strong><i>{{author.username}}</i></strong></span>
                
                <button id="info-button" class="btn btn-primary" onclick="window.location.href = '#/homeworks/{{id}}'"><a class="heading-anchor" href="#/homeworks/{{id}}">Info</a></button>
            </div>
        </div>
    {{/each}}
{{else}}
    <h3>No assigned homeworks for now.</h3>
{{/if}}

{{#if isTeacher}}
    <button type="button" class="btn btn-primary btn-circle btn-lg" id="add-homework">
        <i class="glyphicon glyphicon-pencil"></i>
    </button>
{{/if}}
